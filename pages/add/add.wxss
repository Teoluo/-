/* pages/add/add.wxss */

.main {
  margin: 50rpx;
}

.section {
  width: 100%;
}

.photos-control image {
  width: 200rpx;
  height: 200rpx;
}

.options {
  margin: 5rpx 0rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  text-align: center;
  height: 70rpx;
}

.optionImg {
  width: 40rpx;
  height: 40rpx;
  margin: 5rpx 10rpx;
}

.timeChooseOne {
  display: flex;
  align-items: center;
}

.location {
  margin: 5rpx 0rpx;
  display: flex;
}

.choose {
  width: 90px;

}

.lacationChoose {
  width: 400rpx;
  color: #999;
  display: flex;
  justify-content: flex-end;
}

.lacationChoose text {
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.timeChoose {
  display: flex;
  justify-content: flex-end;
}

.timeChoose text {
  color: #999;
}

.special {
  margin-left: 10rpx;
  padding-left: 10rpx;
  padding-right: 20rpx;
}

/*btn-area  */

.btn-area {
  margin: 50rpx 60rpx;
}

.btn-area button {
  color: #FFF;
  border-radius: 40rpx;
  background-color: #6BA7FF;
  box-shadow: 0px 0px 5px #6BA7FF;
}
