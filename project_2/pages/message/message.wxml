<view class="weui-cell" wx:for="{{['1','2','3']}}" bindtap='openChat'>
  <view class="weui-cell__hd" style="position: relative;margin-right: 10px;">
    <image src="/imgs/qi.jpg" style="width: 50px; height: 50px; display: block" />
    <view class="weui-badge" style="position: absolute;top: -.4em;right: -.4em;" wx:if='{{unRead!=0}}'>{{unRead}}</view>
  </view>
  <view class="weui-cell__bd">
    <view>联系人名称</view>
    <view style="font-size: 13px;color: #888888;">摘要信息</view>
  </view>
</view>