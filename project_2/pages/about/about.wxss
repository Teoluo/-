/**about.wxss**/
.userinfo {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  position: relative;
}
.on{
  height: 250rpx;
  width: 100%;
  background-color: blanchedalmond;
}

.under{
  height: 300rpx;
  width: 100%;
  background-color: #eee;
  position: relative;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.aboutAvatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  position: absolute;
  top:150rpx;
  left:275rpx;
}

.user-nickname {
  font-size: 17pt;
  color: #353535;
  width: 100%;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}
.user-motto{
  font-size: 13pt;
  color: #888;
  width: 100%;
  text-align: center;
}

.usermotto {
  color: #888888;
  font-size: 11pt;
}

.about-info{
  display: flex;
  flex-direction: row;
  width: 100%;
  box-shadow: 1px 1px 2px #eee;
}

.about-info-datail{
  display: flex;
  flex-direction: column;
  width: 50%;
  align-items: center;
  font-size: 13pt;
  color: #353535;
  padding:15rpx 0rpx; 
  border-top:1rpx solid #eee; 
  border-bottom:4px 2px 6px #353535;
}
.second{
  border-left: 1rpx solid #eee;
}
.about-function{
  margin-top: 147rpx;
}

.about-function .about-function-detail{
  margin: 30rpx 0rpx;
  font-size: 17pt;
  font: #353535;
}


.infoCard{
  display: flex;
  flex-direction: column;
  margin: 25rpx;
  height: 20vh;
  width: 700rpx;
  border: 1px solid #eee;
}

.infoCardTitle{
  font-size: 12pt;
  border-bottom: 1px solid #eee;

}

.infoCardContent{
  font-size:10pt;
  color: #353535;
  border-left: 15rpx solid green;

}